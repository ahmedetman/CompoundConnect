{
  "name": "CompoundConnect",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "expo.vscode-expo-tools",
        "ms-vscode.vscode-eslint",
        "ms-vscode.vscode-node-debug2",
        "ms-vscode.vscode-js-debug",
        "humao.rest-client",
        "ms-vscode.vscode-sqlite",
        "ms-ceintl.vscode-language-pack-ar",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-react"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "always"
        },
        "files.associations": {
          "*.json": "jsonc"
        },
        "emmet.includeLanguages": {
          "javascript": "javascriptreact"
        },
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "javascript.preferences.includePackageJsonAutoImports": "auto"
      }
    }
  },

  "forwardPorts": [3000, 3001, 8081, 19000, 19001, 19002, 19006],
  "portsAttributes": {
    "3000": { 
      "label": "Dashboard (React)",
      "onAutoForward": "notify"
    },
    "3001": { 
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "8081": { 
      "label": "Metro Bundler",
      "onAutoForward": "silent"
    },
    "19000": { 
      "label": "Expo Dev Server",
      "onAutoForward": "silent"
    },
    "19001": { 
      "label": "Expo Dev Server (LAN)",
      "onAutoForward": "silent"
    },
    "19002": { 
      "label": "Expo Dev Server (Tunnel)",
      "onAutoForward": "silent"
    },
    "19006": { 
      "label": "Expo Web Server",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "npm install -g @expo/cli && ./dev-server.sh install",

  "postStartCommand": "cd packages/api && npm run migrate && cd ../.. && ./dev-server.sh start",

  "remoteUser": "node",

  "mounts": [
    "source=${localWorkspaceFolder}/packages/api/uploads,target=${containerWorkspaceFolder}/packages/api/uploads,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "NODE_ENV": "development",
    "TZ": "UTC"
  }
}